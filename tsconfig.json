{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "composite": false,
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/templates/**/*"
  ]
}
